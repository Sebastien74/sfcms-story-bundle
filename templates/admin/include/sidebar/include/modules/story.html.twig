{% trans_default_domain 'admin' %}

{% if 'story'|moduleActive(allModules) %}
    {% set uri = app.request.uri %}
    {% set active = '/stories/' in uri %}
    {% set module = 'story'|moduleActive(allModules, true) %}
    {% set i18n = i18nsModules['story'][app.user.locale] is defined ? i18nsModules['story'][app.user.locale] : i18nsModules['story']['fr'] %}
    {% set title = i18n.placeholder is defined and i18n.placeholder|striptags|length > 0 ? i18n.placeholder : i18nsModules['story']['entity'].adminName %}
    <li{% if active %} class="active"{% endif %}>
        <a href="{{ path('admin_story_index', {"website": websiteId}) }}" data-toggle="preloader">
            {{ i18nsModules['story']['entity'].iconClass|iconHtml({'width': 11, 'height': 15, 'class': 'white me-3'}) }}{{ title|raw }}
        </a>
    </li>
{% endif %}